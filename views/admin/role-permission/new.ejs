<!-- BEGIN #content -->
<div id="content" class="app-content">
    <ol class="breadcrumb float-xl-end">
        <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
        <li class="breadcrumb-item active">Users</li>
        <li class="breadcrumb-item"><a href="<%= link1 %>">Role & Permissions</a></li>
        <li class="breadcrumb-item active">Add new</li>
    </ol>
    <h1 class="page-header">Add new <small>Role & Permissions</small></h1>
    <div class="row">
        <div class="col-xl-3">
            <div class="panel panel-inverse">
                <div class="panel-heading">
                    <h4 class="panel-title">Role & Permission Form</h4>
                    <div class="panel-heading-btn"> <a href="javascript:;" class="btn btn-xs btn-icon btn-default" data-toggle="panel-expand"><i class="fa fa-expand"></i></a> <a href="javascript:;" class="btn btn-xs btn-icon btn-success" data-toggle="panel-reload"><i class="fa fa-redo"></i></a> <a href="javascript:;" class="btn btn-xs btn-icon btn-warning" data-toggle="panel-collapse"><i class="fa fa-minus"></i></a> <a href="javascript:;" class="btn btn-xs btn-icon btn-danger" data-toggle="panel-remove"><i class="fa fa-times"></i></a> </div>
                </div>
                <div class="panel-body pt-2">
                    <form class="needs-validation" name="demo-form" action=<%= formActionTarget %> method="POST" enctype="multipart/form-data" novalidate>
                        <div class="row ">
                            <div class="col-md-12 bg-light-input">
                                <label for="role_name" class="form-label col-form-label-lg pb-1">Role<span class="star">*</span></label>
                                <input type="text" class="form-control form-control-lg role_name fs-6 bg-light-input" title="role_name" id="role_name" name="role_name" value="<%= data.role_name %>" placeholder="E. g. Manager" aria-describedby="" autofocus />
                                <% if (status === "Error" && customFieldErrors.role_name) { %>
                                    <span class="text-danger"><%= customFieldErrors.role_name.message %></span>
                                <% } %>
                            </div>
                            <div class="col-md-12 d-grid gap-2 d-md-flex justify-content-md-end mt-3">
                                <button class="btn btn-md btn-dark" type="submit">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END #content -->
