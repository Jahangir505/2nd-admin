<%- partial('../../layouts/admin-sidebar.ejs', {selmenu: 'users'}) %>
<div id="content" class="content">
    <h1 class="page-header"> <%= subtitle %> <%= title %> </h1>
    <div class="row">
        <div class="col-xl-4">
            <div class="panel panel-inverse">
                <div class="panel-heading">
                    <h4 class="panel-title"> <%= subtitle %> <%= title %> Form</h4>
                    <div class="panel-heading-btn">
                        <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default"
                           data-click="panel-expand"><i class="fa fa-expand"></i></a>
                        <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success"
                           data-click="panel-reload"><i class="fa fa-redo"></i></a>
                        <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning"
                           data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                        <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger"
                           data-click="panel-remove"><i class="fa fa-times"></i></a>
                    </div>
                </div>
                <div class="panel-body">
                    <% if(flashMsgError && flashMsgError.length > 0 ) { %>
                        <div class="alert alert-danger">
                            <% if(flashMsgError.length === 1) { %>
                                <strong> <%= flashMsgError %> </strong>
                            <% } else { %>
                                <ul>
                                    <% flashMsgError.forEach(function(err) { %>
                                        <li><strong> <%= err %> </strong></li>
                                    <% }) %>
                                </ul>
                            <% } %>
                        </div>
                    <% } %>
                    <% if(flashMsgSuccess && flashMsgSuccess.length > 0 ) { %>
                        <div class="alert alert-success">
                            <% if(flashMsgSuccess.length === 1) { %>
                                <strong> <%= flashMsgSuccess %> </strong>
                            <% } else { %>
                                <ul>
                                    <% flashMsgSuccess.forEach(function(err) { %>
                                        <li><strong> <%= err %> </strong></li>
                                    <% }) %>
                                </ul>
                            <% } %>
                        </div>
                    <% } %>
                    <form class="form-horizontal" role="form" data-parsley-validate="true" name="demo-form"
                          action=<%= formActionTarget %> method="POST" enctype="multipart/form-data">
                        <div class="form-group row m-b-15">
                            <label class="col-md-4 col-sm-4 col-form-label" for="Password">Password <span
                                        class="val">*</span></label>
                            <div class="col-md-8 col-sm-8">
                                <input type="password" placeholder="********" class="form-control <%= (status === "Error" && customFieldErrors.password) ? 'input-custom-error' : '' %>" placeholder="Ex: ......" name="password"
                                       id="password">
                                <% if (status === "Error" && customFieldErrors.password) { %>
                                    <small class="text-danger"><%= customFieldErrors.password.message %></small>
                                <% } %>
                            </div>
                        </div>

                        <div class="form-group row m-b-15">
                            <label class="col-md-4 col-sm-4 col-form-label"></label>
                            <div class="col-md-8 col-sm-8">
                                <button type="submit" class="btn btn-inverse"></i> Submit</button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
