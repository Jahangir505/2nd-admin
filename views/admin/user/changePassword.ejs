<%- partial('../../layouts/admin-sidebar.ejs', {selmenu: 'add-user'}) %>
<!--************ Alert Start *************-->
<%- partial('../../admin/partial/alert.ejs', {flashMsgError: flashMsgError, flashMsgSuccess: flashMsgSuccess}) %>

<!--************ Alert End *************-->
<!-- BEGIN #content -->
<div id="content" class="app-content">
    <!-- BEGIN breadcrumb -->
    <ol class="breadcrumb float-xl-end">
        <ol class="breadcrumb float-xl-end">
            <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
            <li class="breadcrumb-item active">Users</li>
            <li class="breadcrumb-item"><a href="/admin/user/index">Backend Users</a></li>
            <li class="breadcrumb-item active">Change Password</li>
        </ol>
    </ol>
    <!-- END breadcrumb -->
    <!-- BEGIN page-header -->
    <h1 class="page-header">Change Password <small>Backend Users</small></h1>
    <!-- END page-header -->
    <!-- BEGIN row -->
    <div class="row">
        <!-- BEGIN col-10 -->
        <div class="col-xl-5">
            <!-- BEGIN panel -->
            <div class="panel panel-inverse pt-0">
                <!-- BEGIN panel-heading -->
                <div class="panel-heading">
                    <h4 class="panel-title"><%= subtitle %> <%= title %> Form</h4>
                    <div class="panel-heading-btn"> <a href="javascript:;" class="btn btn-xs btn-icon btn-default" data-toggle="panel-expand"><i class="fa fa-expand"></i></a> <a href="javascript:;" class="btn btn-xs btn-icon btn-success" data-toggle="panel-reload"><i class="fa fa-redo"></i></a> <a href="javascript:;" class="btn btn-xs btn-icon btn-warning" data-toggle="panel-collapse"><i class="fa fa-minus"></i></a> <a href="javascript:;" class="btn btn-xs btn-icon btn-danger" data-toggle="panel-remove"><i class="fa fa-times"></i></a> </div>
                </div>
                <!-- END panel-heading -->
                <!-- BEGIN panel-body -->
                <div class="panel-body custom-sniper-container">
                    <form class="row g-3 needs-validation pt-2" action=<%= formActionTarget %> method="POST" enctype="multipart/form-data" novalidate>
                        <div class="col-md-12">
                            <label for="password" class="form-label">Old Password <span class="star">*</span></label>
                            <input type="password" class="form-control <%= (status === "Error" && customFieldErrors.password) ? 'input-custom-error' : '' %>" placeholder="********" name="password"
                                   id="password">
                            <% if (status === "Error" && customFieldErrors.password) { %>
                                <small class="text-danger"><%= customFieldErrors.password.message %></small>
                            <% } %>
                        </div>
                        <div class="col-md-12">
                            <label for="password" class="form-label">New Password <span class="star">*</span></label>
                            <input type="password" class="form-control <%= (status === "Error" && customFieldErrors.password) ? 'input-custom-error' : '' %>" placeholder="********" name="password"
                                   id="password">
                            <% if (status === "Error" && customFieldErrors.password) { %>
                                <small class="text-danger"><%= customFieldErrors.password.message %></small>
                            <% } %>
                        </div>
                        <div class="col-md-12">
                            <label for="password" class="form-label">Confirm New Password <span class="star">*</span></label>
                            <input type="password" class="form-control <%= (status === "Error" && customFieldErrors.password) ? 'input-custom-error' : '' %>" placeholder="********" name="password"
                                   id="password">
                            <% if (status === "Error" && customFieldErrors.password) { %>
                                <small class="text-danger"><%= customFieldErrors.password.message %></small>
                            <% } %>
                        </div>
                        <div class="col-12">
                            <button class="btn btn-dark" type="submit">Submit</button>
                        </div>
                    </form>
                </div>
                <!-- END panel-body -->
            </div>
            <!-- END panel -->
        </div>
        <!-- END col-10 -->
    </div>
    <!-- END row -->
</div>
<!-- END #content -->
