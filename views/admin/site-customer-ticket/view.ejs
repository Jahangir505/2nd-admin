<%- partial('../../layouts/admin-sidebar.ejs', {selmenu: 'backenduser'}) %>
<!-- BEGIN #content -->
<div id="content" class="app-content">
    <!-- BEGIN breadcrumb -->
    <ol class="breadcrumb float-xl-end">
        <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
        <li class="breadcrumb-item active">Users</li>
        <li class="breadcrumb-item"><a href="/admin/site-customer-ticket/index">Backend Users</a></li>
        <li class="breadcrumb-item active"><%= data.ticket_id %></li>
    </ol>
    <!-- END breadcrumb -->
    <!-- BEGIN page-header -->
    <h1 class="page-header"><%= data.ticket_id %> <small>Backend Users</small></h1>
    <!-- END page-header -->
    <!-- BEGIN row -->
    <div class="row">
        <!-- BEGIN col-10 -->
        <div class="col-xl-3">
            <!-- BEGIN panel -->
            <div class="panel panel-inverse">
                <!-- BEGIN panel-heading -->
                <div class="panel-heading">
                    <h4 class="panel-title">Detail of <%= title %> </h4>
                    <div class="panel-heading-btn"> <a href="javascript:;" class="btn btn-xs btn-icon btn-default" data-toggle="panel-expand"><i class="fa fa-expand"></i></a> <a href="javascript:;" class="btn btn-xs btn-icon btn-success" data-toggle="panel-reload"><i class="fa fa-redo"></i></a> <a href="javascript:;" class="btn btn-xs btn-icon btn-warning" data-toggle="panel-collapse"><i class="fa fa-minus"></i></a> <a href="javascript:;" class="btn btn-xs btn-icon btn-danger" data-toggle="panel-remove"><i class="fa fa-times"></i></a> </div>
                </div>
                <!-- END panel-heading -->
                <!-- BEGIN panel-body -->
                <div class="panel-body p-0 custom-sniper-container">
                    <div class="table-responsive">
                        <table class="table table-striped mb-0">
                            <thead>
                            <tr>
                                <th>Subject</th>
                                <th>Information</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <td><strong>Ticket ID</strong></td>
                                <td><%= data.ticket_id %></td>
                            </tr>
                            <tr>
                                <td><strong>Created Date</strong></td>
                                <td><%= data.createdAt ? moment(data.createdAt).format('DD-MMM-YYYY') : 'Not Set yet' %></td>
                            </tr>
                            <tr>
                                <td><strong>Ticket Type</strong></td>
                                <td><%= data.siteTicketType ? data.siteTicketType.name : '' %></td>
                            </tr>
                            <tr>
                                <td><strong>Ticket-Detail</strong></td>
                                <td><%= data.message %></td>
                            </tr>
                            <tr>
                                <td><strong>Attachment</strong></td>
                                <td ng-controller="commonActionController">
                                    <a href="#"  ng-click="clickMeForShowImage($event, '/uploads/site-ticket/<%= data.attachment %>', '')">
                                        <i class="fa fa-download"></i>
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Status</strong></td>
                                <td>
                                    <% if (data.status == 1) { %>
                                        <span class="running">In-Progress</span>
                                    <% } %>
                                    <% if (data.status == 2) { %>
                                        <span class="running">Cancled</span>
                                    <% } %>
                                    <% if (data.status == 3) { %>
                                        <span class="running">Completed</span>
                                    <% } %>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Created by</strong></td>
                                <td><%= data.createdBy ? data.createdBy.email : '' %></td>
                            </tr>
                            <tr>
                                <td><strong>Updated</strong></td>
                                <td><%= data.updatedAt ? moment(data.updatedAt).format('DD-MMM-YYYY') : 'Not Set yet' %></td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- END panel-body -->
            </div>
            <!-- END panel -->
        </div>
        <!-- END col-10 -->
    </div>
    <!-- END row -->
</div>
<!-- END #content -->
