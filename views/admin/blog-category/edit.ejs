<%- partial('../../layouts/admin-sidebar.ejs', {selmenu: 'blogCategory'}) %>
<!--************ Alert Start *************-->
<%- partial('../../admin/partial/alert.ejs', {flashMsgError: flashMsgError, flashMsgSuccess: flashMsgSuccess}) %>

<!--************ Alert End *************-->
<!-- BEGIN #content -->
<div id="content" class="app-content">
    <!-- ********** Breadcrumbs Start *********** -->
    <ol class="breadcrumb float-xl-end">
        <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
        <li class="breadcrumb-item active">Press</li>
        <li class="breadcrumb-item"><a href="/admin/user/index">Categories</a></li>
        <li class="breadcrumb-item active">Edit</li>
    </ol>
    <!-- ********** Breadcrumbs End *********** -->
    <h1 class="page-header">Edit <small>Categories</small></h1>
    <div class="row">
        <div class="col-xl-3">
            <div class="panel panel-inverse">
                <div class="panel-heading">
                    <h4 class="panel-title"><%= title %> Form</h4>
                    <div class="panel-heading-btn"> <a href="javascript:;" class="btn btn-xs btn-icon btn-default" data-toggle="panel-expand"><i class="fa fa-expand"></i></a> <a href="javascript:;" class="btn btn-xs btn-icon btn-success" data-toggle="panel-reload"><i class="fa fa-redo"></i></a> <a href="javascript:;" class="btn btn-xs btn-icon btn-warning" data-toggle="panel-collapse"><i class="fa fa-minus"></i></a> <a href="javascript:;" class="btn btn-xs btn-icon btn-danger" data-toggle="panel-remove"><i class="fa fa-times"></i></a> </div>
                </div>
                <div class="panel-body pt-2">
                    <form class="needs-validation" name="demo-form" action=<%= formActionTarget %> method="POST" enctype="multipart/form-data" novalidate>
                        <div class="row ">

                            <div class="col-md-12 bg-light-input">
                                <label for="name" class="form-label col-form-label-lg pb-1"><%= title %> Name<span class="star">*</span></label>
                                <input type="text" class="form-control form-control-lg name fs-6 bg-light-input" title="name" id="name" name="name" value="<%= data.name %>" placeholder="Type Role name here" aria-describedby="" autofocus />
                                <% if (status === "Error" && customFieldErrors.name) { %>
                                    <span class="text-danger"><%= customFieldErrors.name.message %></span>
                                <% } %>
                            </div>
                            <div class="col-md-12 bg-light-input">
                                <label for="status" class="form-label col-form-label-lg pb-1">Status <span class="star">*</span></label>
                                <select class="form-select bg-light fs-6 status" id="status" name="status" title="status" autofocus required>
                                    <option value="">Please Select</option>
                                    <option value="1" <%= (data.status == 1) ? 'selected' : '' %>>Active</option>
                                    <option value="2" <%= (data.status == 2) ? 'selected' : '' %>>Inactive</option>
                                </select>

                                <% if (status === "Error" && customFieldErrors.status) { %>
                                    <span class="text-danger"><%= customFieldErrors.status.message %></span>
                                <% } %>
                            </div>
                            <div class="col-md-12 d-grid gap-2 d-md-flex justify-content-md-end mt-3">
                                <button class="btn btn-md btn-dark" type="submit">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END #content -->
